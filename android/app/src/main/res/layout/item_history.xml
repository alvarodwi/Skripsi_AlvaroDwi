<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    >
    <TextView
        android:id="@+id/lbl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceTitleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#ID abcde-fghij-klmn" />

    <TextView
        android:id="@+id/lbl_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceTitleSmall"
        app:layout_constraintStart_toStartOf="@id/lbl_id"
        app:layout_constraintTop_toBottomOf="@id/lbl_id"
        tools:text="18/9/2023, 18:37 UTC+7" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/div1"
        app:layout_constraintTop_toBottomOf="@id/lbl_timestamp"
        android:layout_marginVertical="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
